<div class="container">

  <h2>
    <%= image_tag 'brands_icon.svg', class:"title-icon" %>

    <%=t 'brands.title' %>
  </h2>
  <h3><%=t 'brands.subtitle' %></h3>

  <div class="row">

    <div class="brands-logo col-lg-10 offset-1">
      <% (1..12).each do |brand| %>
        <div class="col-6 col-lg-3 ">
          <div class="img-wrapper">
            <div class="img-subwrapper <%= "brand-#{brand}" %>"">
              <%= image_tag "icon_brands_#{brand}.png" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

</div>
