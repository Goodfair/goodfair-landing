<div class="container intro-splash">
  <div class="row">
    <div class="intro-copy col-lg-6 col-xl-5">
      <h1><%=t 'intro.title' %></h1>
      <p><%=t 'intro.subtitle' %></p>
      <button type="button" class="d-none d-lg-flex video-trigger" data-video-id="6KkuA4M9d-M">Watch The video<i class="fa fa-caret-right" aria-hidden="true"></i>
      </button>

    </div>
    <div class="email-bar d-flex d-md-none">
      <span class="d-none d-md-flex">Interested in hearing more?</span>

      <div id="mc_embed_signup">
        <form
          action="https://goodfair.us18.list-manage.com/subscribe/post?u=65c046c9ba74c04a2e002abcc&amp;id=5342ccc916"
          method="post"
          id="mc-embedded-subscribe-form"
          name="mc-embedded-subscribe-form"
          class="validate"
          target="_blank"
          novalidate="novalidate">
          <div id="mc_embed_signup_scroll">
            <div class="input-div">
              <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Email Address" required="required">
              <i class="fa fa-envelope-o" aria-hidden="true"></i>
            </div>
            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true">
              <input type="text" name="b_65c046c9ba74c04a2e002abcc_5342ccc916" tabindex="-1" value=""></div>
            <div class="clear"><input type="submit" value="SUBSCRIBE" name="Subscribe" id="mc-embedded-subscribe" class="button"></div>
          </div>
        </form>
      </div>
    </div>

    <div class="outer-video-wrapper col-lg-6 col-xl-7">
      <div class="inner-video-wrapper">
<video class="intro-video" autoplay="" loop="" muted="" poster="https://s3-us-west-1.amazonaws.com/goodfair/poster.jpg" playsinline=""><source src="https://s3-us-west-1.amazonaws.com/goodfair/preview.mp4" type="video/mp4"></video>
      <div class="overlay-layer"></div>
      <div class="play-button"></div>
      <button class="js-video-button video-trigger" data-video-id="6KkuA4M9d-M"></button>
      </div>


      <!-- <%= image_tag "video_placeholder.png", alt: 'Video', class: 'intro-video' %> -->
    </div>
  </div>
  <div class="our-vision d-md-none" id='vision'>
    <%= render 'our_vision' %>
  </div>

</div>
</div>
