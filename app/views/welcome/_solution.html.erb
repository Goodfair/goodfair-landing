<div class="container">
  <h3><%=t 'solution.subtitle' %></h3>
  <h2><%=t 'solution.title' %></h2>
  <p><%=t 'solution.paragraph' %></p>
</div>
<div class="center slider">
  <div>
    <div class="hex">
      <div class="circle-ripple"></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_1' %></span></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_2' %></span></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_3' %></span></div>
      <img width="156" src="assets/slide1_hex@2x.png">
    </div>
  </div>
  <div>
    <div class="hex">
      <div class="circle-ripple"></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_2' %></span></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_1' %></span></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_3' %></span></div>
      <img width="156" src="assets/slide1_hex@2x.png">
    </div>
  </div>
  <div>
    <div class="hex">
      <div class="circle-ripple"></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_3' %></span></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_2' %></span></div>
      <div class="hex-title">Sim<span><%=t 'solution.tech_1' %></span></div>
      <img width="156" src="assets/slide1_hex@2x.png">
    </div>
  </div>
</div>
