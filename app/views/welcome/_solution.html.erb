  <h2><%=t 'solution.block_header' %></h2>
  <div class="row">
    <div class="benefit col-md-6">
      <%= image_tag 'solution_benefit@2x', class: 'token-icon' %>
      <h4><%=t 'solution.block_1.title' %></h4>
      <p><%=t 'solution.block_1.paragraph' %></p>
    </div>
    <div class="benefit col-md-6">
      <%= image_tag 'solution_benefit@2x', class: 'token-icon' %>
      <h4><%=t 'solution.block_2.title' %></h4>
      <p><%=t 'solution.block_2.paragraph' %></p>
