<div class="token-bg"></div>
<div class="container">
  <%= image_tag 'token-image-desktop@2x.png', class: 'token-icon d-none d-md-block' %>
  <div class="row">
    <div class="token-intro col-md-7">
      <h2>
        <%= image_tag 'token_icon.png' %>
        <%=t 'token.title' %>
      </h2>
    </div>
  </div>

  <%= image_tag 'token-image@2x.png', class: 'token-icon d-md-none' %>

  <div class='row token-blocks'>
    <div class="col-12 col-md-7 col-lg-4 token-copy">
      <h3><%=t 'token.subtitle' %></h3>
      <p><%=t 'token.paragraph' %></p>
    </div>
    <div class='col-12 col-lg-8'>
      <div class="row">
        <% (1..6).each do |token| %>
          <div class='col-md-6 col-lg-6 token-row-column'>
            <div class='token-row'>
              <%= image_tag 'token_benefit_icon.svg', class: 'token-icon-3' %>
              <div class="token-row-text">
                <h4><%=t "token.block_#{token}.title" %></h4>
                <p><%=t "token.block_#{token}.content" %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
