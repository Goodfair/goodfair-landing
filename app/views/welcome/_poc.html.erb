      <div class="poc-benefits">
        <div class='row'>
          <div class='col-6'>
            <div><%= image_tag "poc_checkmark.svg" %><%= t 'poc.feature_1' %></div>
          </div>
          <div class='col-6'>
            <div><%= image_tag "poc_checkmark.svg" %><%= t 'poc.feature_2' %></div>
          </div>
        </div>
        <div class='row'>
          <div class='col-6'>
            <div><%= image_tag "poc_checkmark.svg" %><%= t 'poc.feature_3' %></div>
          </div>
          <div class='col-6'>
            <div><%= image_tag "poc_checkmark.svg" %><%= t 'poc.feature_4' %></div>
          </div>
        </div>
        <div class='row'>
          <div class='col-6'>
            <div><%= image_tag "poc_checkmark.svg" %><%= t 'poc.feature_5' %></div>
          </div>
          <div class='col-6'>
            <div><%= image_tag "poc_checkmark.svg" %><%= t 'poc.feature_6' %></div>
          </div>
        </div>
      </div>
      <div class="email-signup">
        <button type="button"><%= t 'poc.explore' %></button>
      </div>
    </div>
    <div class='col-6 col-lg-6'>
      <%= image_tag "poc_screenshot@2x.png", class: "screenshot" %>
      <%= image_tag "poc_screenshot_desktop@2x.png", class: "screenshot d-none d-lg-block" %>
    </div>
  </div>
</div>
