<div class=" mobile-tablet">
  <div class="container">
  <div class='poc-screenshot'>
    <h3><%=t 'poc.subtitle' %></h3>
    <h2><%=t 'poc.title' %></h2>

    <%= image_tag "poc_laptop@2x.png", class: "laptop-screenshot" %>
    <div class="poc-benefits">
      <div class='row'>
        <div class='col-sm-12 col-md-6'><%= image_tag "icon_poc_checkmark.svg" %><%= t 'poc.feature_1' %></div>
        <div class='col-sm-12 col-md-6'><%= image_tag "icon_poc_checkmark.svg" %><%= t 'poc.feature_2' %></div>
        <div class='col-sm-12 col-md-6'><%= image_tag "icon_poc_checkmark.svg" %><%= t 'poc.feature_3' %></div>
        <div class='col-sm-12 col-md-6'><%= image_tag "icon_poc_checkmark.svg" %><%= t 'poc.feature_4' %></div>
        <div class='col-sm-12 col-md-6 d-none d-md-block'><%= image_tag "icon_poc_checkmark.svg" %><%= t 'poc.feature_5' %></div>
        <div class='col-sm-12 col-md-6 d-none d-md-block'><%= image_tag "icon_poc_checkmark.svg" %><%= t 'poc.feature_6' %></div>
      </div>
    </div>
  </div>
  <div class="email-signup">
    <button type="button"><%= t 'poc.explore' %></button>
  </div>
</div>
</div>


